// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id         String   @id @default(uuid())
    email      String   @unique
    name       String
    about_me   String?
    avatar     String?
    password   String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    @@map("users")
}

model Avatar {
    id   Int    @id @default(autoincrement())
    code String @unique
    url  String

    @@map("avatars")
}

model RecoveryCode {
    id         String   @id @default(uuid())
    email      String
    code       String
    active     Boolean
    expires_in DateTime
    created_at DateTime @default(now())

    @@map("recovery_codes")
}

model Tip {
    id     Int     @id @default(autoincrement())
    author String?
    via    String
    url    String

    @@map("tips")
}

model Log {
    id          String   @id @default(uuid())
    user_id     String?
    action_code String
    details     String?
    created_at  DateTime @default(now())

    @@map("logs")
}
